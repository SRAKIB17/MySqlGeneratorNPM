{
  "compilerOptions": {
    // tsc select.ts --target es6
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./test-directory",
    "lib": [
      "ES2017.Object",
      "DOM",
      "ESNext",
      "ES2017",
      "ES2021",
      "es2021.intl"
    ]
  },
  "include": [
    "test-directory"
  ],
  "exclude": [
    "test-directory"
  ],
  "compileOnSave": true,
}